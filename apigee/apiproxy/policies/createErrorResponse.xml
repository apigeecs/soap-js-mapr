<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<AssignMessage async="false" continueOnError="false" enabled="true" name="createErrorResponse">
	<Set>
	  <Payload contentType="application/json" variablePrefix="$" variableSuffix="%">{ "error": "BackendError", "errorText": "$backendErrorText%" }</Payload>
	</Set>
	<IgnoreUnresolvedVariables>true</IgnoreUnresolvedVariables>
	<AssignTo createNew="false" transport="http" type="response"/>
</AssignMessage>
